@import '../../style/variables.styl'

.PlotHeader
  padding 1vh 5vw
  display flex
  justify-content space-between
  width 100vw
  height 40px
  background-color alpha(color-black, 0.2)
  border-bottom 1px solid color-grey
  
  h1, form
    display inline-block
  
  h1
    color color-black
    margin-top 3px
    font-size 1.7rem
    
  label, button, select
    margin 4px 6px 10px 6px
    font-size 0.9rem
  
  button
    
    &.button-disabled
      background-color color-grey
    
    &.button-primary
      background-color darken(color-light-blue,20)
    
    &.button-secondary
      background-color lighten(color-red, 20)
      
  @media screen and (max-width: breakpoint-large)
    h1
      margin-top 8px
      font-size 1.3rem
    label, button, select
      margin 6px 6px 10px 6px
      font-size 0.8rem
  
  @media screen and (max-width: breakpoint-medium)
    h1
      margin-top 9px
      font-size 1.1rem
    label, button, select
      font-size 0.7rem
      
    select.example-graph, label.example-graph
      display none
  
  @media screen and (max-width: breakpoint-small)
    h1
      margin-top 11px
      font-size 0.9rem
      
    label, button, select
      font-size 0.6rem
      
  @media screen and (max-width: breakpoint-tiny)
    h1
      font-size 0.8rem
    select.start-node, label.start-node, label.algorithm
      display none
  

    